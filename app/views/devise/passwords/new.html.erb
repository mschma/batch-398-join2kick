<%= render "shared/background_image" %>

<div class="container">
<h2>Forgot your password?</h2>
<br>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs" style="width: 450px; margin: 0 auto;">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", placeholder: "E-Mail", style: "margin-bottom: 35px;" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Reset", class: "button", style: "margin-bottom: 15px;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
