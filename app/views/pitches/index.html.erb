<div class="content">
  <div class="card-pitches">
    <% @pitches.each do |pitch| %>
      <div class="card-pitch">
        <% if policy(pitch).index? %>
          <img src="<%= pitch.picture %>" alt="">
          <div class="card-pitch-description">
            <p><%= pitch.name %></p>
            <p><%= pitch.address %></p>
            <div class="card-pitch-price">
              <p><%= pitch.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

