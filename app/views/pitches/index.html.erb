<div class="content">
  <div class="card-pitches">
    <% @pitches.each do |pitch| %>
      <div class="card-pitch">
        <% if policy(pitch).index? %>
          <img src="https://res.cloudinary.com/dgwgea5k3/image/upload/v1590488834/abigail-keenan-8-s5QuUBtyM-unsplash_v02m1f.jpg" alt="">
          <div class="card-pitch-description">
            <p><%= pitch.name %></p>
            <p><%= pitch.address %></p>
            <div class="card-pitch-price">
              <p><%= pitch.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_pack_tag 'mapbox.js' %>
<% end %>

